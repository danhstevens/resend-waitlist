{
  "name": "resend-waitlist",
  "version": "1.0.0",
  "description": "A Waitlist component that integrates with the Resend API.",
  "author": "Dan Stevens",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./server": {
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    }
  },
  "scripts": {
    "build:js": "tsup",
    "build:css": "tailwindcss -c tailwind.config.js -i ./src/tailwind.css -o ./src/compiled.css --minify",
    "build": "pnpm build:css && pnpm build:js",
    "test": "vitest --run"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "resend": "^4.1.2"
  },
  "devDependencies": {
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.9",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "tsup": "^6.7.0",
    "typescript": "^4.9.0",
    "vite": "^4.3.0",
    "vitest": "^0.29.2"
  }
}
